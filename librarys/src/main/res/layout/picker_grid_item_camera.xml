<?xml version="1.0" encoding="utf-8"?>

<com.glyfly.librarys.imagepicker.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/picker_grid_camera_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/grid_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:drawablePadding="6dp"
            android:drawableTop="@drawable/picker_ic_camera"
            android:gravity="center"
            android:text="拍摄照片"
            android:textColor="#CDCECE"
            android:textSize="14sp" />
    </RelativeLayout>
</com.glyfly.librarys.imagepicker.widget.SquareLayout>